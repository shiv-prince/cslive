<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Homepagefive">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text=" 5th  "
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Name"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="Semester"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <Button
            android:layout_width="wrap_content"
            android:text="logout"
            android:id="@+id/logout5"
            android:textColor="@color/white"
            android:background="@drawable/btnbg"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1five"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:elevation="10dp"
                android:padding="20dp"
                android:textAlignment="center"
                android:shadowRadius="5"
                android:text="MANAGEMENT AND ENTREPRENEURSHIP FOR IT INDUSTRY(18CS51)"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                />

            <Button
                android:id="@+id/button3five"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:padding="5dp"
                android:shadowRadius="5"
                android:text="COMPUTER NETWORKS AND SECURITY(18CS52)"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/button2five"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:padding="5dp"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="DATABASE MANAGEMENT SYSTEM(18CS53)"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/button4five"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:padding="5dp"
                android:shadowRadius="5"
                android:text="AUTOMATA THEORY AND COMPUTABILITY(18CS54)"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/button5five"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:shadowRadius="5"
                android:text="APPLICATION DEVELOPMENT USING PYTHON(18CS55)"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/button6five"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:shadowRadius="5"
                android:text="UNIX PROGRAMMING(18CS56)"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>