<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Homepagethree">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="  3rd  "
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Name"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="Semester"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <Button
            android:layout_width="wrap_content"
            android:text="logout"
            android:id="@+id/logout3"
            android:textColor="@color/white"
            android:background="@drawable/btnbg"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1three"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:elevation="10dp"
                android:padding="20dp"
                android:textAlignment="center"
                android:shadowRadius="5"
                android:text="TRANSFORM CALCULUS, FOURIER SERIES, AND NUMERICAL TECHNIQUES(18MAT31)"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                />

            <Button
                android:id="@+id/button3three"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:padding="5dp"
                android:shadowRadius="5"
                android:text="DATA STRUCTURES AND APPLICATION (18CS32)"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/button2three"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:padding="5dp"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="ANALOG AND DIGITAL ELECTRONICS (18CS33)"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/button4three"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:padding="5dp"
                android:shadowRadius="5"
                android:text="COMPUTER ORGANIZATION (18CS34)"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                />



            <Button
                android:id="@+id/button6three"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:shadowRadius="5"
                android:text="SOFTWARE ENGINEERING (18CS35)"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/button7three"
                android:background="@drawable/uibg"
                android:backgroundTint="#00796B"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:shadowRadius="5"
                android:text="DISCRETE MATHEMATICAL  STRUCTURES(18CS36)"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>